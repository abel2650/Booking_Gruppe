@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<div class="formbold-main-wrapper">
  <!-- Forfatter: FormBold Team -->
  <!-- LÃ¦s mere: https://formbold.com -->
  <div class="formbold-form-wrapper">
    <form action="https://formbold.com/s/FORMULAR_ID" method="POST">
      <div class="formbold-mb-5">
        <label for="name" class="formbold-form-label">Fulde Navn</label>
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Fulde Navn"
          class="formbold-form-input"
        />
      </div>
      <div class="formbold-mb-5">
        <label for="phone" class="formbold-form-label">Telefonnummer</label>
        <input
          type="text"
          name="phone"
          id="phone"
          placeholder="Indtast dit telefonnummer"
          class="formbold-form-input"
        />
      </div>
      <div class="formbold-mb-5">
        <label for="email" class="formbold-form-label">Email Adresse</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Indtast din email"
          class="formbold-form-input"
        />
      </div>

      <div class="formbold-mb-5 formbold-pt-3">
        <label class="formbold-form-label formbold-form-label-2">
          Dine Oplysninger
        </label>
        <div class="flex flex-wrap formbold--mx-3">
          <div class="w-full sm:w-half formbold-px-3">
            <div class="formbold-mb-5">
              <label for="city" class="formbold-form-label">Indtast by</label>
              <input
                type="text"
                name="city"
                id="city"
                placeholder="Indtast by"
                class="formbold-form-input"
              />
            </div>
          </div>
          <div class="w-full sm:w-half formbold-px-3">
            <div class="formbold-mb-5">
              <label for="state" class="formbold-form-label">Vejnavn</label>
              <input
                type="text"
                name="state"
                id="state"
                placeholder="Vejnavn"
                class="formbold-form-input"
              />
            </div>
          </div>
          <div class="w-full sm:w-half formbold-px-3">
            <div class="formbold-mb-5">
              <label for="post-code" class="formbold-form-label">Postnummer</label>
              <input
                type="text"
                name="post-code"
                id="post-code"
                placeholder="Postnummer"
                class="formbold-form-input"
              />
            </div>
          </div>
        </div>
      </div>

      <div>
       <a class="formbold-btn" asp-area="" asp-page="/Kvittering/Kvittering1">Book Nu</a>   </div>
    </form>
  </div>
</div>

