@page
@model Booking_Gruppe.Bookings.EditBooking
@using Booking_Gruppe.Services    
@using Booking_Gruppe.model

@{
    Layout = "_Layout"; // Assuming you have a shared layout for styling
}

<div class="container mt-4">
    <h2>Booking</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nummer</th>
                <th>Tjenester</th>
                <th>Varighed</th>
                <th>Pris</th>
                <th></th> <!-- Ny kolonne til "Tilføj til kurv" knap -->
            </tr>
        </thead>
        <tbody>     
        <form method="post">
        @foreach (var frisør in Model.ListFrisør)
            {
                <tr>
                    <td>@frisør.Nummer</td>
                    <td>@frisør.Tjenester</td>
                    <td>@frisør.Varighed</td>
                    <td>@frisør.Pris</td>
                    <td>
                        <button type="button" class="btn btn-success" onclick="addToCart(@frisør.Nummer, @frisør.Pris)">Tilføj til kurv</button>
                    </td>
                                        
                    <td>
                        <input type="submit" value="Slet" class="btn btn-success" asp-page-handler="Delete" asp-route-nummer="@frisør.Nummer">
                    </td>
                    <td>
                        <button type="button" class="btn btn-success" onclick="addToCart(@frisør.Nummer, @frisør.Pris)">Ændre</button>
                    </td>
                                        
                    
                </tr>
            }    
        </form> 
        </tbody>
    </table>

    <!-- Formular til at tilføje en ny booking -->
    <form method="post">
        <!-- ... (din eksisterende formularkode) -->
    </form>

    <!-- Samlet pris sektion -->
    <div class="mt-4">
        <h3>Samlet Pris: <span id="totalPrice">0</span> DKK</h3>
        
        <!-- "Book nu!" knap -->
       
           <a class="btn btn-primary" asp-area="" asp-page="/Kalendere/Index">Book Nu</a>   
        </div>
</div>

<script>
    var total = 0;

    function addToCart(nummer, pris) {
        // Implementér logik for at tilføje til kurv baseret på frisørnummeret og pris
        total += pris;
        updateTotalPrice();
        alert("Frisør med nummer " + nummer + " tilføjet til kurven!");
    }
    
    function updateTotalPrice() {
        // Opdaterer det samlede beløb i HTML
        document.getElementById("totalPrice").innerText = total.toFixed(2);
    }

    function bookNow() {
        // Implementér logik for at udføre booking og vis bekræftelsesmeddelelse
        alert("Den er nu booket!");
    }
</script>
